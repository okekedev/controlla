<Window x:Class="AirControllaWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AirControlla for Windows" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Gradient Background matching macOS -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF669AFF" Offset="0"/>
                <GradientStop Color="#FF9966FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Refresh Button (Top Right) -->
        <Button x:Name="RefreshButton"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20"
                Padding="16,8"
                Background="#40FFFFFF"
                BorderThickness="0"
                Cursor="Hand"
                Click="RefreshButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="20"
                                        Padding="{TemplateBinding Padding}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE72C;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   Margin="0,0,6,0"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Refresh"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <!-- Centered Content -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Desktop Icon -->
            <TextBlock Text="&#xE7F8;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="80"
                       Foreground="White"
                       Opacity="0.9"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Title -->
            <TextBlock Text="Receiver Mode"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Subtitle -->
            <TextBlock Text="Download iPhone App to Control"
                       FontSize="18"
                       Foreground="White"
                       Opacity="0.9"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Connection Status -->
            <StackPanel x:Name="StatusPanel" Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20">
                <Ellipse x:Name="StatusIndicator"
                         Width="14"
                         Height="14"
                         Fill="Gray"
                         Margin="0,0,10,0"
                         VerticalAlignment="Center"/>

                <TextBlock x:Name="ConnectionText"
                           Text="Not Started"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
