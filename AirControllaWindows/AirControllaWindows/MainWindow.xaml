<Window x:Class="AirControllaWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AirControlla for Windows" Height="500" Width="700"
        Background="#FF5080FF"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Centered Content -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Desktop Icon -->
            <TextBlock Text="&#xE7F8;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="80"
                       Foreground="White"
                       Opacity="0.9"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Title -->
            <TextBlock Text="Receiver Mode"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Subtitle -->
            <TextBlock Text="Download iPhone App to Control"
                       FontSize="18"
                       Foreground="White"
                       Opacity="0.9"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Connection Status -->
            <StackPanel x:Name="StatusPanel" Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20">
                <Ellipse x:Name="StatusIndicator"
                         Width="14"
                         Height="14"
                         Fill="Gray"
                         Margin="0,0,10,0"
                         VerticalAlignment="Center"/>

                <TextBlock x:Name="ConnectionText"
                           Text="Not Started"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

            </StackPanel>

            <!-- Administrator Warning Button -->
            <Button x:Name="AdminWarning"
                    Background="White"
                    Padding="24,14"
                    Margin="0,20,0,0"
                    Visibility="Collapsed"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="12"
                                            Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE72E;"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="16"
                                                       Foreground="#8080FF"
                                                       Margin="0,0,10,0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="Enable Administrator"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="#8080FF"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Grid>
</Window>
